#include <iostream>

int main() {
  double weight;
  std::cout << " What is your weight on Earth? ";
  std::cin >> weight;
  
  int Planet_Number;
  std::cout << " Input the planet number you want to fight on ";
  std::cin >> Planet_Number;
  switch(Planet_Number) {
    
    case 1:
    weight=weight * 0.38;
    break;
    
    case 2:
     weight= weight * 0.91;
     break;

     case 3: 
      weight= weight * 0.38;
      break;

      case 4:
      weight= weight * 2.34;
       break;

       case 5:
        weight= weight * 1.06;
        break;

        case 6: 
         weight= weight * 0.92;
         break;

         case 7: 
          weight=weight * 1.19;
          break;

          default:
         std::cout << " Invalid Plante Number\n";
          break;



  }
std:: cout << " your weight will be: "<< weight;
  
  
  
  
  
  
  
  
  
}
